<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizMobile.Resultado">
    <ContentPage.Content>
        <StackLayout>
            <Label/>
            <Label/>
            <Label/>
            <Label/>
            <StackLayout Orientation="Horizontal" Padding="0" Spacing="100" HorizontalOptions="CenterAndExpand" >
                <Image Source="star.png" WidthRequest="50" x:Name="star1" VerticalOptions="Center"/>
                <Image Source="starfalse.png" WidthRequest="50" x:Name="star2"/>
                <Image Source="starfalse.png" WidthRequest="50" x:Name="star3"/>
            </StackLayout>
                <Label Text="Resultado"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                x:Name="labelResult"
                FontSize="Large"
                TextColor="Black"/>
            <Button Text="FINALIZAR" FontSize="Large" Clicked="Fim" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>