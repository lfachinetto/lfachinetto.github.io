<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizMobile.IP">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Número do tablet:" FontSize="Large" TextColor="Black"/>
            <Picker Title="Nº" x:Name="NumberPicker" FontSize="Large" TextColor="Black">
                <Picker.Items>
                    <x:String>1</x:String> 
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                </Picker.Items>
            </Picker>
            <Label Text="IP do notebook:" FontSize="Large" TextColor="Black"/>
            <Entry Text="" FontSize="Large" x:Name="IPEntry" TextColor="Black"/>
            <Button Text="OK" Clicked="Entry_Completed" FontSize="Large" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>